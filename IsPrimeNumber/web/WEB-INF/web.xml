<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <filter>
        <filter-name>LoggerFilter</filter-name>
        <filter-class>filter.LoggerFilter.LoggerFilter</filter-class>
    </filter>
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>filter.LoggerFilter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <servlet-name>getProductServlet</servlet-name>
        <dispatcher>REQUEST</dispatcher>
        <dispatcher>FORWARD</dispatcher>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoggerFilter</filter-name>
        <url-pattern>/*</url-pattern>
        <dispatcher>REQUEST</dispatcher>
    </filter-mapping>
    <servlet>
        <servlet-name>IsPrimeNumberController</servlet-name>
        <servlet-class>Controller.IsPrimeNumberController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestRequestParamServlet</servlet-name>
        <servlet-class>Controller.TestRequestParamServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <servlet-class>Controller.AddItemToCartServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ChooseBackgroudServlet</servlet-name>
        <servlet-class>Controller.ChooseBackgroudServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getProductServlet</servlet-name>
        <servlet-class>Controller.getProductServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Controller.Auth.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IsPrimeNumberController</servlet-name>
        <url-pattern>/IsPrimeNumberController</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestRequestParamServlet</servlet-name>
        <url-pattern>/TestRequestParamServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddItemToCartServlet</servlet-name>
        <url-pattern>/AddItemToCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ChooseBackgroudServlet</servlet-name>
        <url-pattern>/ChooseBackgroud</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getProductServlet</servlet-name>
        <url-pattern>/getProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/Login</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
